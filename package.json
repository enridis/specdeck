{
  "name": "specdeck",
  "version": "0.3.0",
  "description": "Git-based project planning with Markdown files and web UI",
  "main": "dist/index.js",
  "bin": {
    "specdeck": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc && npm run copy-templates && npm run build:ui",
    "build:ui": "cd ui && npm run build",
    "copy-templates": "mkdir -p dist/templates/copilot/prompts dist/templates/specdeck/releases && cp -r src/templates/copilot/* dist/templates/copilot/ && cp -r src/templates/specdeck/* dist/templates/specdeck/",
    "dev": "tsc --watch",
    "dev:ui": "cd ui && npm run dev",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:functional": "tests/functional/bug-fixes.sh",
    "test:all": "npm test && npm run test:functional",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "prepublishOnly": "npm run build",
    "cli": "node dist/cli.js",
    "serve": "node dist/cli.js serve"
  },
  "keywords": [
    "openspec",
    "cli",
    "project-management",
    "planning",
    "git",
    "spec-driven"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@types/express": "^5.0.6",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "cors": "^2.8.5",
    "express": "^5.2.1",
    "open": "^11.0.0",
    "remark-gfm": "^4.0.0",
    "remark-parse": "^11.0.0",
    "unified": "^11.0.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/jest": "^29.5.11",
    "@types/js-yaml": "^4.0.9",
    "@types/mdast": "^4.0.4",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "remark-frontmatter": "^5.0.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3",
    "yaml": "^2.8.2"
  }
}
